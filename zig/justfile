# Justfile for building and running a Zig project
alias r := run-simple

# Default target: build the project
[no-cd]
default:
    just run-simple

# Simple run
[no-cd]
run-simple:
    zig run main.zig

[no-cd]
run-watch:
    watchexec -e zig -r -c -- zig run main.zig

# Build the project using Zig
[no-cd]
build:
    zig build --cache-dir /tmp/cache

# Run the project after building
[no-cd]
run:
    zig build run --cache-dir /tmp/cache

[no-cd]
run-build-watch:
    watchexec -e zig -r -c -- zig build run --cache-dir /tmp/cache

# Clean build artifacts
[no-cd]
clean:
    rm -rf zig-out /tmp/cache

# Rebuild from scratch
[no-cd]
rebuild: clean build

up:
    devpod up .

down:
    devpod down .

up-clean:
    devpod up --recreate .

